<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/container"
      android:gravity="center">


     <ImageView
          android:id="@+id/yourResultImageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/paper"
          android:scaleType="centerCrop"
          android:contentDescription="@string/app_name"

         />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/yourResultTextView"
          android:textSize="32sp"
          android:text="A te választásod"
          android:textColor="#808080"
          />


      <ImageView
          android:id="@+id/enemyResultImageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/paper"
          android:scaleType="centerCrop"
          android:contentDescription="@string/app_name"

          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/enemyResultTextView"
          android:textSize="32sp"
          android:text="A gép választása"
          android:textColor="#808080"
          />
      
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/resultTextView"
          android:textSize="24sp"
          android:text="Eredmény: Ember: 0 Gép: 0"
          android:textColor="#808080"
          />
      


  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_below="@id/container"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/buttonContainer"
        >


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/rockButton"
            android:backgroundTint="#000000"
            android:textSize="24sp"
            android:textColor="@color/white"

            android:text="Kő"/>
        <Button
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/paperButton"
            android:text="Papír"
            android:backgroundTint="#000000"
            android:textSize="24sp"
            android:textColor="@color/white"


            />
        <Button
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/scissorsButton"
            android:text="Olló"
            android:textSize="24sp"
            android:backgroundTint="#000000"
            android:textColor="@color/white"


            />
    </LinearLayout>

</RelativeLayout>